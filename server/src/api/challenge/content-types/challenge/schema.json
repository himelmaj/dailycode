{
  "kind": "collectionType",
  "collectionName": "challenges",
  "info": {
    "singularName": "challenge",
    "pluralName": "challenges",
    "displayName": "Challenge",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "easy",
        "medium",
        "hard",
        "expert"
      ],
      "required": true
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag",
      "mappedBy": "challenge"
    },
    "solution": {
      "type": "richtext",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 8,
      "minLength": 4,
      "default": "day0",
      "regex": "^day\\d{1,5}$"
    }
  }
}
